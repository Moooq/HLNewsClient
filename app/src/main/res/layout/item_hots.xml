<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
        android:paddingLeft="10dp"
        android:id="@+id/image_hots"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"/>
    <RelativeLayout
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/title_hots"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/title_hots"
            android:layout_marginBottom="2dp"
            android:id="@+id/editor_head_hots"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/editor_head_hots"
            android:layout_below="@id/title_hots"
            android:textSize="14dp"
            android:textColor="@color/black_semi_transparent"
            android:textStyle="bold"
            android:layout_marginBottom="2dp"
            android:id="@+id/editor_hots"/>
        <TextView
            android:id="@+id/content_hots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editor_head_hots"
            android:ellipsize="end"
            android:maxLines="2"/>
    </RelativeLayout>

</LinearLayout>