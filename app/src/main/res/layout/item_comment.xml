<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cmt_head"
            android:layout_width="30dp"
            android:layout_marginLeft="5dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/cmt_sponsor"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/cmt_head"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/like1"
            android:id="@+id/like"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <!--<TextView-->
            <!--android:id="@+id/cmt_del"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_toLeftOf="@id/like"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:text=""-->
            <!--android:typeface="monospace"-->
            <!--android:clickable="true"-->
            <!--android:textColor="@color/colorPrimary"/>-->
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cmt_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cmt_time"
            android:layout_alignParentRight="true"
            android:layout_below="@id/cmt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cmt_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cmt_content"
            android:layout_toLeftOf="@id/cmt_time"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text=""
            android:typeface="monospace"
            android:clickable="true"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>
</LinearLayout>